<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ItemNameStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_item_name</item>
    </style>

    <style name="ItemSecondaryTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_item_secondary_text</item>
    </style>

    <style name="AddNewItemButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="DialogTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="WorkoutItemControlButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>
